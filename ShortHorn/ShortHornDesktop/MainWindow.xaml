<Window x:Class="ShortHorn.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShortHorn Login" Height="210" Width="296">
    <Grid>
        <StackPanel Height="108" Margin="10,10,10,0" VerticalAlignment="Top">
            <Label Content="Your login:"/>
            <TextBox x:Name="txtBoxLogin" Height="23" TextWrapping="Wrap" />
            <Label Content="You password:"/>
            <PasswordBox x:Name="txtBoxPassword" Height="23"/>
        </StackPanel>
        <Button x:Name="btnLogin" Content="Sign in" Click="btnLogin_Click" Margin="10,118,10,0" Height="47" VerticalAlignment="Top"/>
    </Grid>
</Window>
