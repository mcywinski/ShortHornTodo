<Window x:Class="ShortHorn.Desktop.Windows.TodoListViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ShortHorn.Desktop.ViewModels"
        Title="ShortHorn Todo" Height="418" Width="623">
    <Grid>
        <ListBox x:Name="listBoxTodoLists" HorizontalAlignment="Left" Margin="10,10,0,45" Width="200" ItemsSource="{Binding TodoLists}" DisplayMemberPath="Name" Loaded="ListBox_Loaded" SelectionChanged="ListBox_SelectionChanged"/>
        <Button x:Name="btnAddList" Content="+" HorizontalAlignment="Left" Margin="10,347,0,0" VerticalAlignment="Top" Width="20
                " Click="btnAddList_Click" Height="23"/>
        <ListView HorizontalAlignment="Left" Margin="215,10,0,45" Width="200" ItemsSource="{Binding TodoItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="30">
                        <CheckBox HorizontalAlignment="Left" Width="15" Margin="0,6,0,4" VerticalAlignment="Center" />
                        <Label Margin="20,0,10,4" VerticalAlignment="Center" Content="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="btnAddTodoItem" Content="+" HorizontalAlignment="Left" Margin="215,347,0,0" VerticalAlignment="Top" Width="20" Click="btnAddTodoItem_Click" Height="23"/>
        <TextBox x:Name="txtBoxNewTodoItem" HorizontalAlignment="Left" Height="23" Margin="240,347,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>

    </Grid>
</Window>
