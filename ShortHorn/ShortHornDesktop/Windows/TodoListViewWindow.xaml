<Window x:Class="ShortHorn.Desktop.Windows.TodoListViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ShortHorn.Desktop.ViewModels"
        Title="{Binding Location}" Height="418" Width="623">
    <Grid>
        <ListBox HorizontalAlignment="Left" Margin="10,10,0,35" Width="200" ItemsSource="{Binding TodoLists}" DisplayMemberPath="Name" Loaded="ListBox_Loaded"/>
        <Button x:Name="btnAddList" Content="+" HorizontalAlignment="Left" Margin="10,357,0,0" VerticalAlignment="Top" Width="20
                " Click="btnAddList_Click"/>

    </Grid>
</Window>
