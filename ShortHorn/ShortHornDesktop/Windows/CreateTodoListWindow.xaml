<Window x:Class="ShortHorn.Desktop.Windows.CreateTodoListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create new todo list" Height="111" Width="373" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="List name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxListName" Height="23" Margin="89,13,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding TodoListName}"/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Right" Margin="0,0,90,10" Width="75" Height="20" VerticalAlignment="Bottom" Click="btnCreate_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnCancel_Click"/>

    </Grid>
</Window>
